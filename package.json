{
	"name": "biso24-share-app",
	"private": true,
	"workspaces": {
		"packages": [
			"modules/*",
			"packages/**/*"
		],
		"nohoist": [
			"**/@react-native-async-storage/async-storage",
			"**/react",
			"**/react-native",
			"**/react-native/**"
		]
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"pretty": "eslint --fix && prettier --write",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"yarn pretty --filter=\"./packages/**/*\""
		]
	},
	"engines": {
		"node": ">= v18.14.0",
		"npm": "please-use-yarn",
		"pnpm": "please-use-yarn",
		"yarn": ">= v1.22.19"
	},
	"dependencies": {
		"@biso24/assets": "*",
		"@biso24/components": "*",
		"@biso24/constants": "*",
		"@biso24/features": "*",
		"@biso24/hooks": "*",
		"@biso24/services": "*",
		"@biso24/theme": "*",
		"@biso24/types": "*",
		"@biso24/utils": "*",
		"hex-to-rgba": "^2.0.1",
		"native-base": "^3.4.28",
		"react": "^18.2.0",
		"react-native": "^0.73.6",
		"react-native-icomoon": "^0.1.1",
		"react-native-safe-area-context": "^4.9.0",
		"react-native-svg": "^15.1.0",
		"react-native-vector-icons": "^10.0.3"
	},
	"devDependencies": {
		"@babel/core": "^7.24.4",
		"@babel/preset-env": "^7.24.4",
		"@babel/runtime": "^7.24.4",
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@react-native/babel-preset": "^0.75.0-main",
		"@react-native/metro-config": "^0.75.0-main",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/react": "^18.2.74",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^7.5.0",
		"@biso24/babel-config": "*",
		"babel-plugin-module-resolver": "^5.0.0",
		"commitlint-config-standard-commitlint": "*",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard-react": "*",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-autofix": "^1.1.0",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-prefer-arrow-functions": "^3.3.2",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.34.1",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"@biso24/metro-config": "*",
		"prettier": "^3.2.5",
		"prettier-eslint": "^16.3.0",
		"react-native-monorepo-tools": "^1.2.1",
		"standard-prettier": "*",
		"tsconfig": "*",
		"turbo": "latest"
	}
}
